{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "_": true,
        "Toastify": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "deprecation",
        "lodash",
        "prettier"
    ],
    "rules": {
        "curly": [
            "error",
            "all"
        ],
        "indent": [
            "error",
            2
        ],
        "object-curly-spacing": [
            "error",
            "always",
            {
                "objectsInObjects": true,
                "arraysInObjects": true
            }
        ],
        "require-jsdoc": [
            "off"
        ],
        "operator-linebreak": [
            "error",
            "before"
        ],
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ]
    }
}
